root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,cpp,h,hpp,inl}]
indent_style = space
indent_size = 4
tab_width = 4

[*.{xml,xaml,manifest,rc}]
indent_style = space
indent_size = 2
tab_width = 2

[*.{md,txt}]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false

[CMakeLists.txt]
indent_style = space
indent_size = 2
tab_width = 2
